<div class="author">
  <h1 class="author__heading">Hi I am Nurudeen Olajobi</h1>
  <p class="author__body">Agronomist And Crop Scientist</p>

  <img
    src="/css/img/agronomist.jpg"
    alt="person looking out through the window"
    height="981"
    width="528"
    class="hero-image"
  />
</div>

<section class="articles">
  <h2 class="articles__heading">Latest Post</h2>
  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>

    <% }) %>
  </ul>
  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older post</a>
  <% } %>
</section>
